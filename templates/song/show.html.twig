{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>{{ 'song.show.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ song.duration }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ song.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary"  href="{{ path('song_index') }}">back to list</a>

    <a class="btn btn-secondary"  href="{{ path('song_edit', {'id': song.id}) }}">edit</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
